<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    tools:context=".ui.changepassword.ChangePasswordFragment">

    <EditText
        android:id="@+id/old_password_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rounded_corner_edittext"
        android:hint="Old Password"
        android:paddingLeft="@dimen/_20sdp"
        android:textColorHint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:id="@+id/new_password_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rounded_corner_edittext"
        android:hint=" New Password"
        android:paddingLeft="@dimen/_20sdp"
        android:textColorHint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_password_et" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="@+id/new_password_et"
        app:layout_constraintBottom_toBottomOf="@+id/new_password_et"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_30sdp"/>
    <EditText
        android:id="@+id/re_enter_password_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rounded_corner_edittext"
        android:hint="Re-Enter Old Password"
        android:paddingLeft="@dimen/_20sdp"
        android:textColorHint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_et" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="@+id/re_enter_password_et"
        app:layout_constraintBottom_toBottomOf="@+id/re_enter_password_et"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_30sdp"/>
    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/spinner_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/_20sdp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_enter_password_et" />


</androidx.constraintlayout.widget.ConstraintLayout>